{
  "kind": "collectionType",
  "collectionName": "tickets",
  "info": {
    "name": "Tickets",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "subject": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 60
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Technical",
        "Sales"
      ]
    },
    "replies": {
      "type": "dynamiczone",
      "components": [
        "useful.ticket-reply"
      ]
    },
    "code": {
      "type": "string",
      "required": true,
      "minLength": 4,
      "maxLength": 12,
      "unique": true
    },
    "open": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
